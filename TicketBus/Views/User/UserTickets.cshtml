@model List<TicketInfo>

@{
    ViewData["Title"] = "User Tickets";
}

<h1>User Tickets</h1>

@if (Model.Count == 0)
{
    <p>No tickets available for the logged-in user.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Ticket Number</th>
                <th>Customer Name</th>
                <!-- Thêm các cột khác tùy theo yêu cầu -->
            </tr>
        </thead>
        <tbody>
            @foreach (var ticket in Model)
            {
                <tr>
                    <td>@ticket.Id</td>
                    <td>@ticket.TicketNumber</td>
                    <td>@ticket.CustomerName</td>
                    <!-- Thêm các cột khác tùy theo yêu cầu -->
                </tr>
            }
        </tbody>
    </table>
}